.selectBox {
  height: 1.5rem;
  /* border: 2px solid #e2e2e2; */
  border-left: 0;
  border-right: 0;
  /* border-radius: 20rpx; */
  position: relative;
  /* padding-left: 10rpx; */
  padding: 20rpx 0;
}

.selectBox .select {
  box-sizing: border-box;
  /* width: 100%; */
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  /* margin-left: 20rpx; *//* justify-content: center; */
}

.selectBox .select .select_text {
  font-size: 35rpx;
  color: black;
  line-height: 28rpx;
  /* flex: 1; *//* min-width: 200rpx; */
}

.selectBox .select .select_img {
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition: transform 0.3s;
  margin-left: 20rpx;
}

.selectBox .select .select_img_rotate {
  transform: rotate(180deg);
}

.selectBox .optionBox {
  position: absolute;
  top: calc(100%);
  width: 100%;
  box-sizing: border-box;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  /* border-left: 2px solid black; *//* border-right: 2px solid black; *//* border-bottom: 1px solid #f3f3f3; */
  z-index: 9999;
  height: auto;
  box-shadow: 0px 15px 25px -15px #2c2c2c;
}

.selectBox .optionBox .option {
  display: block;
  line-height: 50rpx;
  font-size: 35rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 10rpx;
  z-index: 9999;
  /* text-align: center; */
  padding-left: 20rpx;
}

.selectBox .optionBox .option.selected {
  color: #71b6e4;
}
