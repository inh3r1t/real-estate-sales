.form .form-body {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  /* margin-bottom: 200rpx; */
  padding-bottom: 150rpx;
}

.form .form-body .item {
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  line-height: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
  padding: 20rpx 60rpx;
  border-top: 1rpx solid #f5f5f5;
}

.form .form-body .item .form-lable {
  flex-basis: 120rpx;
}

.form .form-body .item .form-input {
  display: flex;
  flex-grow: 1;
  flex-direction: row;
  color: #808080;
  line-height: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.form .form-body .item-report {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  padding: 20rpx 60rpx;
  border-top: 1rpx solid #f5f5f5;
}

.form .form-body .item-report .form-lable {
  line-height: 60rpx;
}

.form .form-body .item-report .buiding-list {
  display: flex;
  flex-direction: column;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.form .nav-footer {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  background-color: #fff;
  /* padding-bottom: 20rpx; */
}

.form .form-footer {
  justify-content: center;
  display: flex;
  flex-direction: column;
  padding: 0 60rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.form .building-add {
  margin-left: 200rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.form .form-footer button {
  width: 100%;
  background-color: #70b71e;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #7cae53;
  font-size: 30rpx;
  font-weight: bold;
}

.form-body .item radio-group {
  display: flex;
  justify-content: center;
  flex-basis: 100%;
}

.form-body .radio {
  line-height: 80rpx;
  height: 80rpx;
  display: block;
  flex-basis: 200rpx;
}
