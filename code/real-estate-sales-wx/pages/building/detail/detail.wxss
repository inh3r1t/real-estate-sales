@import "../../../wxParse/wxParse.wxss";

swiper {
  width: 100%;
  height: 340rpx;
}

swiper .slide-image {
  width: 100%;
  height: 100%;
}

.building {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  line-height: 50rpx;
  padding-bottom: 120rpx;
  font-size: 14px;
}

.building .building-title {
  font-size: 16px;
  font-weight: bold;
}

.building .building-commission {
  color: red;
  font-weight: bold;
}

.building .building-principal {
  color: red;
  font-weight: bold;
}

.building .building-detail {
  display: flex;
  flex-direction: column;
}

.nav-box {
  position: fixed;
  width: 100%;
  bottom: 0;
}

.handle-btn {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.handle-btn .handle-report, .handle-btn .handle-contact {
  flex: 1;
  text-align: center;
  background-color: #1aad19;
  color: #fff;
  padding: 20rpx;
}

.handle-btn .handle-report:hover {
  background-color: #169816;
}

.handle-btn .handle-contact:hover {
  background-color: #e05a5e;
}

.handle-btn .handle-contact {
  background-color: #e3676a;
}

.share {
  float: right;
  margin-right: 10px;
  margin-bottom: 15rpx;
  line-height: 60rpx;
  padding: 0 15rpx;
  background-color: #fff;
}

/* for custom modal */

.modal .modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal .modal-content {
  position: fixed;
  z-index: 9500;
  width: 650rpx;
  height: 1080rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 2rpx;
  display: flex;
  flex-direction: column;
  top: 20rpx;
  left: 50%;
  margin-left: -325rpx;
  box-sizing: border-box;
  /* margin-top: -400rpx; */
  /* padding: 5rpx; */
}

.modal-content .share-title {
  top: 20rpx;
  color: #101010;
  font-size: 14px;
  text-align: center;
  margin-bottom: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.modal-content .share-content {
  color: #101010;
  font-size: 12px;
  /* border: 1rpx solid #dcdfe6; *//* padding: 20rpx; */
}

.modal-content .share-btns {
  display: flex;
  justify-content: center;
  margin: 5rpx;
  /* background-color: #f56c6c; */
}

.share-btns .btn {
  text-align: center;
  border-radius: 0rpx;
  width: 250rpx;
  color: #fff;
  font-size: 14px;
  background-color: #f56c6c;
  height: 60rpx;
  line-height: 60rpx;
}

.share-btns .btn-cancel {
  color: #000;
  background-color: #dcdfe6;
}

.share-btns .btn-copy {
  color: #fff;
  background-color: #f56c6c;
}

.canvas-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 999999rpx;
}
