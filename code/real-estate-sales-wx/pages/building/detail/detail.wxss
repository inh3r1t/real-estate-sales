@import "../../../wxParse/wxParse.wxss";

swiper {
  width: 100%;
  height: 340rpx;
}

swiper .slide-image {
  width: 100%;
  height: 100%;
}

.building {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  line-height: 50rpx;
  padding-bottom: 120rpx;
}

.building .building-title {
  font-size: 40rpx;
  font-weight: bold;
}

.building .building-summary {
  font-size: 30rpx;
}

.building .building-commission {
  font-size: 30rpx;
  color: red;
}

.building .building-principal {
  font-size: 30rpx;
  color: red;
}

.building .building-address {
  font-size: 30rpx;
}

.building .building-detail {
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}

.nav-box {
  position: fixed;
  width: 100%;
  bottom: 0;
}

.handle-btn {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;

}

.handle-btn .handle-report, .handle-btn .handle-contact {
  flex: 1;
  text-align: center;
  background-color: #1aad19;
  color: #fff;
  font-weight: bold;
  padding: 30rpx;
}
.handle-btn .handle-report:hover {
  background-color: #169816;
}
 .handle-btn .handle-contact:hover {
  background-color: #E05A5E;
}

.handle-btn .handle-contact {
  background-color: #e3676a;
}

