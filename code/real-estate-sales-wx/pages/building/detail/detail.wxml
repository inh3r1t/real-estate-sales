<import src="../../../wxParse/wxParse.wxml" />

<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{building.images}}" wx:key="index">
    <swiper-item bindtap="previewImage">
      <image src="{{item}}" mode='aspectFill' class="slide-image" data-src="{{item}}" />
    </swiper-item>
  </block>
</swiper>
<view class='building'>
  <view class='building-title'>{{building.name}}</view>
  <view class='building-address'>地址：{{building.address}}</view>
  <view class='building-summary'>简介：{{building.summery}}</view>
  <view class='building-commission' hidden="{{!isLogin}}">佣金：{{building.commission}}</view>
  <view class='building-principal'>项目负责人：{{building.manager.userName}} {{building.manager.phoneNum}}</view>
  <view class='building-detail'>
    <text class='bold'>楼盘详情</text>
    <!-- <text>{{building.detail}}</text> -->
    <template is="wxParse" data="{{wxParseData:detail.nodes}}" />
  </view>
</view>
<view class='nav-box' wx:if="{{!isManager}}">
  <view class='handle-btn'>
    <view class='handle-report' bindtap='report'>报备</view>
    <view class='handle-contact' bindtap='makePhoneCall'>电话咨询</view>
  </view>
</view>