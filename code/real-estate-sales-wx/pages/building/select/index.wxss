.building-item .details {
  width: 55%;
}

.building-item .building-select {
  display: flex;
  align-items: center;
  width: 10%;
}

.building-item .details .summary {
  width: 300rpx;
}

.form .form-body {
  display: flex;
  flex-direction: column;
  font-size: 14px;
  /* margin-bottom: 120rpx; */
  padding-bottom: 120rpx;
}

.form .nav-footer {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  background-color: #fff;
  height: 120rpx;
  line-height: 120rpx;
}

.form .form-footer {
  justify-content: center;
  display: flex;
  flex-direction: column;
  padding: 20rpx 60rpx;
}

.form .form-footer button {
  width: 100%;
  background-color: #70b71e;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #7cae53;
  font-size: 14px;
  font-weight: bold;
}
