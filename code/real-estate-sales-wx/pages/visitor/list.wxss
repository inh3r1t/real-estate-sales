.nav-fix {
  position: fixed;
  bottom: 0rpx;
  background-color: #fff;
  padding-top: 20rpx;
  width: 100%;
  padding: 60rpx 30rpx 20rpx;
  box-sizing: border-box;

}

.visitor-list {
  padding-bottom: 140rpx;
}

.visitor-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 0 auto;
  border-bottom: 1px solid #efefef;
  padding: 20rpx;
  box-sizing: border-box;
}

.visitor-item .details {
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: left;
  font-size: 16px;
  color: #000;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.visitor-item .details view {
  overflow: hidden;
  -ms-text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}

.visitor-item-name {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16px;
  margin-bottom: 10rpx;
}

.visitor-item-building,
.visitor-item-detail,
.visitor-item-remark {
  margin-bottom: 10rpx;
}

.visitor-item-detail text {
  margin-right: 10rpx;
}


.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 4px;
  border: 1rpx solid #E6E6EA;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09BB07;
  white-space: nowrap;
}