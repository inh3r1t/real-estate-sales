.nav-fix {
  position: fixed;
  bottom: 0rpx;
  background-color: #fff;
  padding-top: 20rpx;
  width: 100%;
  padding: 60rpx 30rpx 20rpx;
  box-sizing: border-box;

}

.visitor-list {
  padding-bottom: 140rpx;
}

.visitor-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 0 auto;
  border-bottom: 1px solid #efefef;
  padding: 20rpx;
  box-sizing: border-box;
}

.visitor-item .details {
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: left;
  font-size: 16px;
  color: #000;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.visitor-item .details view {
  overflow: hidden;
  -ms-text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}

.visitor-item .details view text {
  font-size: 14px;
}

.visitor-item-name {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16px;
  margin-bottom: 10rpx;
}

.visitor-item-building,
.visitor-item-detail,
.visitor-item-remark {
  margin-bottom: 10rpx;
}

.visitor-item-detail text {
  margin-right: 10rpx;
}

.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  /* border-top: 1rpx solid #D7D6DC; */
  /* border-bottom: 1rpx solid #D7D6DC; */
}

.weui-icon-search {
  position: absolute;
  top: 14rpx;
}

.weui-search-bar-date {
  margin-right: 10rpx;
  line-height: 60rpx;
  color: #09BB07;
  white-space: nowrap;
  font-size: 40rpx;
  width: 50rpx;
}

.weui-search-bar__text {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  margin-left: 40rpx;
}


.weui-icon-search_in-box {
  position: absolute;
  left: 10rpx;
  top: 14rpx;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5rpx;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
  height: 60rpx;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30rpx;
  /* padding-right: 30rpx; */
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
  line-height: 60rpx;
}

.weui-search-bar__input {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  margin-left: 16rpx;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3rpx;
  text-align: center;
  color: #9B9B9B;
  background: #FFFFFF;
  line-height: 60rpx;
}

.weui-search-bar__cancel-btn {
  margin-left: 10rpx;
  line-height: 60rpx;
  color: #09BB07;
  white-space: nowrap;
}

.weui-search-other {
  background-color: #EFEFF4;
  height: 180rpx;
}

/* 日期选择 */
.weui-search-other-item {
  /* justify-content: center; */
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #888;
  border-bottom: 1rpx solid #efefef;
  margin: 0 0 0 86rpx;
  /* justify-content: space-between; */
  padding: 20rpx 0;
}

.weui-search-other-item .picker {
  /* background-color: yellow; */
  height: 30rpx;
  line-height: 30rpx;
  /* margin: 0 2%; */
  /* padding: 0 2%; */
  border-bottom: 1rpx solid #e2e2e2;
  width: 180rpx;
  text-align: center;
  /* margin: 20rpx; */
  margin: 0 20rpx;
}

.weui-search-other-item .form-input {
  margin-left: 20rpx;
  border-bottom: 1rpx solid #e2e2e2;
  text-align: center;
  width: 180rpx;

}

.search-reset {
  justify-content: center;
}

.form-reset {
  flex-grow: 1;
  text-align: center;
}