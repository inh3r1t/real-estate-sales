/**index.wxss**/
@import "/app.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

swiper {
  width: 100%;
  height: 340rpx;
}

swiper .slide-image {
  width: 100%;
  height: 100%;
}

/* estate recommend */

.estate-recommend {
  margin-top: 10rpx;
  width: 100%;
  background: #fff;
  flex-direction: column;
}

.estate-recommend .estate-recommend-title {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  padding: 0 5px;
  font-size: 30rpx;
  align-content: center;
  border-bottom: 1rpx solid #efefef;
  margin: 0 auto;
}

.estate-recommend .estate-recommend-title .estate-recommend-title-icon {
  height: 40rpx;
  line-height: 40rpx;
  width: 6rpx;
  background-color: #3274e5;
  align-self: center;
}

.estate-recommend .estate-recommend-title .estate-recommend-title-name {
  flex-grow: 2;
  margin-left: 10px;
}

.estate-recommend .estate-recommend-title .estate-recommend-title-more {
  flex-grow: 1;
  text-align: right;
  padding-right: 15px;
}

.estate-recommend .estate-recommend-item {
  display: flex;
  flex-direction: row;
  width: 720rpx;
  margin: 0 auto;
  border-bottom: 1px solid #efefef;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.estate-recommend .estate-recommend-item .thumb {
  width: 35%;
  height: 160rpx;
  line-height: 160rpx;
  align-items: center;
  justify-content: center;
  display: flex;
}

.estate-recommend .estate-recommend-item .thumb image {
  width: 260rpx;
  height: 160rpx;
}

.estate-recommend .estate-recommend-item .details {
  width: 65%;
  padding-left: 5%;
  text-align: left;
  font-size: 0.7rem;
  color: #000;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 150rpx;
}

.estate-recommend .estate-recommend-item .details .estate-name {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

.estate-recommend .estate-recommend-item .details .estate-address {
  height: 50rpx;
  line-height: 50rpx;
  color: #979797;
}

.estate-recommend .estate-recommend-item .details .estate-address image {
  height: 20rpx;
  width: 18rpx;
  line-height: 20rpx;
  color: #979797;
}

.estate-recommend .estate-recommend-item .details .summary {
  text-align: left;
  font-size: 0.7rem;
  color: #6a6a6a;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 50rpx;
  line-height: 50rpx;
  align-self: baseline;
}

