.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

swiper {
  width: 100%;
  height: 340rpx;
}

swiper .slide-image {
  width: 100%;
  height: 100%;
}

swiper .slide-title {
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 12px;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.534);
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  opacity: 0.8;
}

/* building recommend */

.building-recommend {
  /* margin-top: 10rpx; */
  width: 100%;
  background: #fff;
  flex-direction: column;
}

.building-recommend .building-recommend-title {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  /* padding: 0 5px; */
  font-size: 15px;
  align-content: center;
  border-bottom: 1rpx solid #efefef;
  margin: 0 auto;
}

.building-recommend .building-recommend-title .building-recommend-title-icon {
  height: 40rpx;
  line-height: 40rpx;
  width: 6rpx;
  margin-left: 10rpx;
  background-color: #3274e5;
  align-self: center;
}

.building-recommend .building-recommend-title .building-recommend-title-name {
  flex-grow: 2;
  margin-left: 10px;
}

.building-recommend .building-recommend-title .building-recommend-title-more {
  flex-grow: 1;
  text-align: right;
  /* padding-right: 15px; */
  display: flex;
  justify-content: flex-end;
  font-size: 14px;
  padding-right: 20rpx;
}
