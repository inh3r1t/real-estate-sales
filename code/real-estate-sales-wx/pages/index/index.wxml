<!--index.wxml-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="index">
    <swiper-item>
      <image src="{{item}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>

<view class="building-recommend">
  <view class="building-recommend-title">
    <view class='building-recommend-title-icon'></view>
    <view class='building-recommend-title-name'>
      推荐楼盘
    </view>
    <view class='building-recommend-title-more'>
      <text bindtap="toMore"> 查看更多>></text>
    </view>
  </view>
  <block wx:if="{{recommendbuildings}}">
    <view bindtap='toDetail' class="building-item" data-id="{{item.id}}" wx:for="{{recommendbuildings}}" wx:key="index">
      <text class='building-commission'>{{item.commission}}</text>
      <view class="thumb">
        <image src="{{item.thumb}}"></image>
      </view>
      <view class="details">
        <view class="building-name">{{item.housename}}</view>
        <view class="building-address">
          <image src='/images/navi.png'></image>
          {{item.houseaddress}}
        </view>
        <text class='summary text-ellipsis'>简介：{{item.summary}}</text>
      </view>
    </view>
  </block>
</view>