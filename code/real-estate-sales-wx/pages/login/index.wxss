.login {
  display: flex;
  flex-direction: column;
}

.login view {
  flex-grow: 1;
  text-align: center;
  margin: 0 80rpx;
}

.login-logo {
  width: 300rpx;
  height: 300rpx;
}

.login-wechat {
  margin-top: 100rpx;
  background-color: #70b71e;
  color: #fff;
  font-weight: bold;
}

.login-phone {
  margin-top: 50rpx;
  background-color: #d9d9d9;
  color: #414141;
  font-weight: bold;
}

.register {
  position: fixed;
  bottom: 100rpx;
  text-align: center;
  width: 100%;
  text-decoration: underline;
  font-size: 30rpx;
  font-weight: bold;
}
