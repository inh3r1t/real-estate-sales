.form .form-body {
  display: flex;
  flex-direction: column;
}

.form .form-body  .item {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  line-height: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
  padding: 20rpx 60rpx;
}

.form .form-body  .item .form-lable {
  width: 120rpx;
}

.form .form-body .item .form-input {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  color: #808080;
  border: 1rpx solid #f5f5f5;
  line-height: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.form .form-footer {
  justify-content: center;
  display: flex;
  margin-top: 100rpx;
}

.form .form-footer button {
  width: 100%;
  margin: 0 60rpx;
  background-color: #e6f1fc;
  color: #1989fa;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #A3D0FD;
  font-size: 30rpx;
}
