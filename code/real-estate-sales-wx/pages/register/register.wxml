<form class="form" bindsubmit="formSubmit">
  <view class="form-body">
    <view class="form-item">
      <text class="form-lable">姓 名</text>
      <input class='form-input' name="name" placeholder="请输入姓名" type="text" value='{{name}}'></input>
    </view>
    <view class="form-item">
      <text class="form-lable">手机号</text>
      <input class='form-input' name="phone" type='text' bindinput="handlePhone" placeholder="请输入手机号" value='{{phone}}'></input>
    </view>
    <view class="form-item">
      <text class="form-lable">密 码</text>
      <input class='form-input' name="password" placeholder="6-12位数字和字母的组合" type="text" password='true' value='{{password}}'></input>
    </view>
    <view class="form-item">
      <text class="form-lable">注册码</text>
      <input class='form-input' name="code" placeholder="请输入注册码" type="text" value='{{code}}'></input>
    </view>
  </view>
  <view class="form-footer">
    <button class='btn btn-primary' formType="submit">立即注册</button>
  </view>
</form>