@import "../../iconfont.wxss";

.container {
  background-color: #f5f5f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 16px;
}

/*  open-type="getUserInfo" bindgetuserinfo="getUserInfo" open-type="getUserInfo" bindgetuserinfo="getUserInfo" open-type="getUserInfo" bindgetuserinfo="getUserInfo"                       */

.container .header {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #3274e5;
  justify-content: center;
}

.container .header image {
  width: 140rpx;
  height: 140rpx;
  border: 10rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
}

.container .header .username {
  height: 80rpx;
  line-height: 80rpx;
  width: 90%;
  text-align: center;
  color: #fff;
  font-size: 16px;
}

.container .header .company {
  height: 80rpx;
  line-height: 80rpx;
  width: 90%;
  text-align: center;
  color: #fff;
}

.container .list {
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}

.container .list .item {
  padding: 20rpx;
  border-bottom: 1rpx solid #efefef;
  color: #000;
}

.container .list .item text {
  margin-right: 10rpx;
}

.logout {
  text-align: center;
  padding: 20rpx 0;
}

button {
  font-size: 12px;
  background-color: #fff;
  border: 0;
  height: 42rpx;
  line-height: 42rpx;
  margin: 0;
  float: right;
  color: #3274e5;
}

.button-hover {
  color: rgba(0, 0, 0, 0.6);
  background-color: #fff;
}

button::after {
  border: none;
}

button .iconfont{
  font-size: 12px;
}